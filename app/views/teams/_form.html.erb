<div class="row">
  <% if team.errors.any? %>
    <div id="error_explanation">
      <span><%= pluralize(team.errors.count, 'error') %> prohibited this team from being saved:</span>
      <ul>
        <% team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="row">
  <%= form_for team do |f| %>
    <div class="form-group">
      <%= label(:title, 'Title') %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label(:logo, 'Logo') %>
      <%= f.file_field :logo, class: 'form-control'  %>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-default' %>
  <% end %>

</div>